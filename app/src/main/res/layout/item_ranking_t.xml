<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/little_box"
    android:layout_margin="@dimen/dimMarginPadding"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txtItemTeamRankingPunti"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/dimMarginPadding"
        android:text="Davide Modolo"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dimSubSubTitle"
        android:id="@+id/txtItemTeamRankingNome"
        android:textAlignment="textStart"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="69"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/dimText"
        android:background="@drawable/little_box"
        android:padding="@dimen/dimMarginPadding"
        android:id="@+id/txtItemTeamRankingPunti"
        android:layout_margin="@dimen/dimMarginPadding"
        />
</androidx.constraintlayout.widget.ConstraintLayout>