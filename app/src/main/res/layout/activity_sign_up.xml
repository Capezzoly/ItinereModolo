<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <ImageView
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:foregroundGravity="center"
        android:layout_margin="@dimen/dimText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/user_img_storage"
        android:scaleType="centerCrop"
        android:id="@+id/imgUser"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgUser"
        android:text="REGISTRAZIONE:"
        android:layout_margin="@dimen/dimText"
        android:textSize="@dimen/dimText"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/txtTitle"
        />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="25dp"
            android:clipToPadding="false"
            android:layout_margin="@dimen/dimText">
            <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dimText"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:textSize="@dimen/dimText"
                android:inputType="textEmailAddress"
                android:hint="example@email.com"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/txtSignupEmail"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dimText"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:textSize="@dimen/dimText"
                android:inputType="textPassword"
                android:hint="password"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/txtSignupPsw1"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:layout_marginBottom="@dimen/dimText"
                android:textSize="@dimen/dimText"
                android:inputType="textPassword"
                android:hint="ripeti password"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/txtSignupPsw2"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:layout_marginBottom="@dimen/dimText"
                android:textSize="@dimen/dimText"
                android:hint="nome"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/txtName"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:layout_marginBottom="@dimen/dimText"
                android:textSize="@dimen/dimText"
                android:hint="cognome"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/txtSurname"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:layout_marginBottom="@dimen/dimText"
                android:textSize="@dimen/dimText"
                android:hint="data di nascita"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/txtBirthDate"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginBottom="@dimen/dimText"

                android:src="@drawable/green_line"
                android:id="@+id/imgLine"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:layout_marginBottom="@dimen/dimText"
                android:textSize="@dimen/dimText"
                android:hint="numero di gara preferito"
                android:inputType="number"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/favNumber"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:layout_marginBottom="@dimen/dimText"
                android:textSize="@dimen/dimText"
                android:hint="circuito preferito"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/favCircuit"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:layout_marginBottom="@dimen/dimText"
                android:textSize="@dimen/dimText"
                android:hint="circuito odiato"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/hateCircuit"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/little_box"
                android:layout_marginBottom="@dimen/dimText"
                android:textSize="@dimen/dimText"
                android:hint="auto preferita"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/favCar"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimMarginPadding"
                android:text="REGISTRATI"
                android:background="@drawable/subscribed_box"
                android:textSize="@dimen/dimText"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:padding="@dimen/dimMarginPadding"
                android:id="@+id/btnSignup"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cliccando REGISTRATI accetti i [Termini e Condizioni]"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/dimText"
                android:gravity="center"
                />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>